<local:DroneBasePage
    x:Class="ACE_Mission_Control.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ACE_Mission_Control.Views"
    xmlns:helper="using:ACE_Mission_Control.Helpers"
    xmlns:ace="using:ACE_Mission_Control.Core.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">
    <Page.Resources>
        <helper:AlertToString x:Key="AlertToString" />
        <helper:MissionStageToString x:Key="MissionStageToString" />
        <helper:MissionActivatedToString x:Key="MissionActivatedToString" />
        <helper:MissionActivatedToColour x:Key="MissionActivatedToColour" />
    </Page.Resources>
    <Grid 
        x:Name="ContentArea"
        Margin="{StaticResource SmallLeftTopRightBottomMargin}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.Resources>
            <Storyboard x:Name="FadeInStoryboard">
                <DoubleAnimation From="0.6" To="1" Duration="00:00:0.6"
                                     Storyboard.TargetName="ContentArea"
                                     Storyboard.TargetProperty="Opacity">
                    <DoubleAnimation.EasingFunction>
                        <QuadraticEase EasingMode="EaseOut"/>
                    </DoubleAnimation.EasingFunction>
                </DoubleAnimation>
            </Storyboard>
        </Grid.Resources>

        <Border Grid.Row="0" Grid.Column="0" BorderBrush="DarkOrange" BorderThickness="3,0,0,0" Margin="12,0,0,0"/>
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical" Margin="20,0,0,0">
            <TextBlock
                x:Uid="Main_MissionStatusHeader"
                Style="{ThemeResource SubtitleTextBlockStyle}"
                Margin="4,0,0,0"/>
            <TextBlock
                VerticalAlignment="Center"
                Text="{x:Bind ViewModel.AttachedDrone.Mission.Stage, Mode=OneWay, Converter={StaticResource MissionStageToString}}"
                Style="{StaticResource CaptionTextBlockStyle}"
                Margin="4,2,0,0"/>
            <TextBlock
                VerticalAlignment="Center"
                Text="{x:Bind ViewModel.AttachedDrone.Mission.Activated, Mode=OneWay, Converter={StaticResource MissionActivatedToString}}"
                Style="{StaticResource CaptionTextBlockStyle}"
                Foreground="{x:Bind ViewModel.AttachedDrone.Mission.Activated, Mode=OneWay, Converter={StaticResource MissionActivatedToColour}}"
                Margin="4,0,0,0"/>
            <TextBlock
                x:Uid="Main_SyncronizedLabel"
                Visibility="{x:Bind ViewModel.AttachedDrone.Synchronized, Mode=OneWay}"
                Style="{StaticResource CaptionTextBlockStyle}"
                Margin="4,0,0,0" />
        </StackPanel>

        <Border Grid.Row="0" Grid.Column="1" BorderBrush="DarkOrange" BorderThickness="3,0,0,0"/>
        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" Margin="8,0,0,0">
            <TextBlock
                x:Uid="Main_OBCHeader"
                Style="{ThemeResource SubtitleTextBlockStyle}"
                Margin="4,0,0,0"/>
            <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Left"
                Margin="4,2,0,0">
                <TextBlock
                    x:Uid="Main_ChaperoneConnectionLabel"
                    VerticalAlignment="Center"
                    Height="20"
                    Margin="0,0,0,0"
                    Style="{StaticResource CaptionTextBlockStyle}"/>
                <TextBlock
                    VerticalAlignment="Center"
                    Height="20"
                    Margin="4,0,0,0"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Text="{x:Bind ViewModel.OBCChaperoneConnectedText, Mode=OneWay}"
                    Foreground="{x:Bind ViewModel.OBCChaperoneConnectedColour, Mode=OneWay}"/>
            </StackPanel>
            <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Left"
                Margin="4,-2,0,0">
                <TextBlock
                    x:Uid="Main_DirectorConnectionLabel"
                    VerticalAlignment="Center"
                    Height="20"
                    Margin="0,0,0,0"
                    Style="{StaticResource CaptionTextBlockStyle}"/>
                <TextBlock
                    VerticalAlignment="Center"
                    Height="20"
                    Margin="4,0,0,0"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Text="{x:Bind ViewModel.OBCDirectorConnectedText, Mode=OneWay}"
                    Foreground="{x:Bind ViewModel.OBCDirectorConnectedColour, Mode=OneWay}"/>
            </StackPanel>
            <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Left"
                Margin="4,-2,0,0">
                <TextBlock
                    x:Uid="Main_DroneConnectionLabel"
                    VerticalAlignment="Center"
                    Height="20"
                    Margin="0,0,0,0"
                    Style="{StaticResource CaptionTextBlockStyle}"/>
                <TextBlock
                    VerticalAlignment="Center"
                    Height="20"
                    Margin="4,0,0,0"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Text="{x:Bind ViewModel.OBCDroneConnectedText, Mode=OneWay}"
                    Foreground="{x:Bind ViewModel.OBCDroneConnectedColour, Mode=OneWay}"/>
            </StackPanel>
        </StackPanel>

        <Border Grid.Row="0" Grid.Column="2" BorderBrush="DarkOrange" BorderThickness="3,0,0,0"/>
        <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Vertical" Margin="8,0,0,0">
            <TextBlock
                x:Uid="Main_UGCSHeader"
                Style="{ThemeResource SubtitleTextBlockStyle}"
                Margin="4,0,0,0"/>
            <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Left"
                Margin="4,2,0,0">
                <TextBlock x:Name="UGCSMissionRetrieveTextBlock"
                       VerticalAlignment="Center"
                       Text="{x:Bind ace:UGCSClient.ConnectionMessage, Mode=OneWay}"
                       Style="{StaticResource CaptionTextBlockStyle}"
                       Height="20"/>
            </StackPanel>
        </StackPanel>

        <Pivot
            x:Name="Items"
            Grid.Row="1"
            Grid.ColumnSpan="3">
            <Pivot.HeaderTemplate>
                <DataTemplate>
                    <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="{Binding}" />
                </DataTemplate>
            </Pivot.HeaderTemplate>
            <PivotItem x:Uid="Main_MissionPivotItem" x:Name="MissionItem">
                <Grid x:Name="MissionGrid">
                    <Frame x:Name="MissionFrame" Style="{ThemeResource ACEFrame}"/>
                </Grid>
            </PivotItem>

            <PivotItem x:Uid="Main_PlannerPivotItem" x:Name="PlannerItem">
                <Grid>
                    <Frame x:Name="PlannerFrame" Style="{ThemeResource ACEFrame}"/>
                </Grid>
            </PivotItem>

            <PivotItem x:Uid="Main_ConfigPivotItem" x:Name="ConfigItem">
                <Grid>
                    <Frame x:Name="ConfigFrame" Style="{ThemeResource ACEFrame}"/>
                </Grid>
            </PivotItem>

            <PivotItem x:Uid="Main_ConsolePivotItem" x:Name="ConsoleItem">
                <Grid>
                    <Frame x:Name="ConsoleFrame" Style="{ThemeResource ACEFrame}"/>
                </Grid>
            </PivotItem>
        </Pivot>
    </Grid>
</local:DroneBasePage>
