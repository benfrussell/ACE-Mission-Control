<local:DroneBasePage
    x:Class="ACE_Mission_Control.Views.MissionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ACE_Mission_Control.Views"
    xmlns:helper="using:ACE_Mission_Control.Helpers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <StackPanel
        x:Name="ContentArea"
        Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
        <Grid
            x:Name="OBCStatusArea"
            Margin="8,8,8,0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Border Grid.ColumnSpan="1" Grid.RowSpan="3" Background="{ThemeResource SystemControlPageBackgroundChromeMediumLowBrush}"
                    BorderBrush="DarkOrange" BorderThickness="3,0,0,0"/>
            <TextBlock x:Uid="Mission_OBCHeader"
                       Grid.Row="0"
                       Grid.ColumnSpan="2"
                       Margin="10,4,0,8"
                       FontWeight="Bold"/>
            <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Left"
                Grid.Row="1"
                Grid.ColumnSpan="1"
                Margin="2,8,0,8">
                <SymbolIcon x:Name="OBCStatusSymbolIcon"
                        VerticalAlignment="Center"
                        Width="40"
                        Symbol="{x:Bind ViewModel.OBCStatusSymbol}"/>
                <TextBlock x:Name="OBCStatusTextBlock"
                       VerticalAlignment="Center"
                       Text="{x:Bind ViewModel.OBCStatusText, Mode=OneWay}"/>
            </StackPanel>
            <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Left"
                Grid.Row="2"
                Grid.ColumnSpan="1"
                Margin="10,8,0,8">
                <Button x:Name="LockButton"
                    x:Uid="Mission_LockButton"
                    Style="{ThemeResource ACEIconButton}"
                    Command="{x:Bind ViewModel.LockButtonCommand}"
                    IsEnabled="{x:Bind ViewModel.LockButtonEnabled, Mode=OneWay}">
                    <SymbolIcon x:Name="LockButtonSymbol"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Symbol="{x:Bind ViewModel.LockButtonSymbol, Mode=OneWay}"/>
                </Button>
                <Button x:Name="UploadButton"
                    x:Uid="Mission_UploadButton"
                    Margin="8,0,0,0"
                    Style="{ThemeResource ACEButton}"/>
            </StackPanel>
        </Grid>
        <Grid
            x:Name="UGCSStatusArea"
            Margin="8,8,8,0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Border Grid.ColumnSpan="1" Grid.RowSpan="4" Background="{ThemeResource SystemControlPageBackgroundChromeMediumLowBrush}"
                    BorderBrush="ForestGreen" BorderThickness="3,0,0,0"/>
            <TextBlock x:Uid="Mission_RetrievalHeader"
                       Grid.Row="0"
                       Grid.ColumnSpan="2"
                       Margin="10,4,0,8"
                       FontWeight="Bold"/>
            <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Left"
                Grid.Row="1"
                Grid.ColumnSpan="1"
                Margin="2,8,0,8">
                <SymbolIcon Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" Symbol="Clock" Width="40" Height="20"/>
                <TextBlock x:Name="UGCSMissionRetrieveTextBlock"
                       Grid.Column="1"
                       Grid.Row="1"
                       VerticalAlignment="Center"
                       Text="{x:Bind ViewModel.UGCSMissionRetrieveText}"
                       Height="20"/>
            </StackPanel>
            <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Left"
                Grid.Row="2"
                Grid.ColumnSpan="1"
                Margin="10,8,0,0">
                <Button x:Name="ConnectUGCSButton"
                        x:Uid="Mission_ConnectUGCSButton"
                        Style="{ThemeResource ACEButton}"/>
                <DropDownButton Style="{ThemeResource ACEDropDownButton}"
                                Margin="8,0,0,0"/>
                <Button x:Name="RetrieveButton"
                        x:Uid="Mission_RetrieveButton"
                        Style="{ThemeResource ACEButton}"
                        Margin="8,0,0,0"/>
            </StackPanel>
            <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Left"
                Grid.Row="3"
                Margin="10,8,0,8">
                <Button x:Name="ImportFileButton"
                        x:Uid="Mission_ImportFileButton"
                        Style="{ThemeResource ACEButton}"/>
            </StackPanel>
        </Grid>

        <ContentDialog x:Name="PassphraseDialog"
                       x:Uid="Mission_PassDialog"
                       PrimaryButtonText="Enter"
                       SecondaryButtonText="Cancel"
                       PrimaryButtonCommand="{x:Bind ViewModel.PassDialogEnterCommand}"
                       Closing="PassphraseDialog_Closing">
            <StackPanel>
                <TextBlock x:Uid="Mission_PassDialogText" />
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <PasswordBox x:Name="PassphraseDialogInput"
                                 Password="{x:Bind ViewModel.PassDialogInputText, Mode=TwoWay}"
                                 helper:EnterKeyHelpers.EnterKeyCommand="{x:Bind ViewModel.PassDialogEnterCommand}" />
                    <ProgressRing Margin="8,0,0,12"
                                  IsActive="{x:Bind ViewModel.PassDialogLoading, Mode=OneWay}" />
                </StackPanel>
                <TextBlock Text="{x:Bind ViewModel.PassDialogErrorText, Mode=OneWay}"
                           Foreground="{ThemeResource SystemErrorTextColor}"/>
            </StackPanel>
        </ContentDialog>
    </StackPanel>
</local:DroneBasePage>
