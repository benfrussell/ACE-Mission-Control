<local:DroneBasePage
    x:Class="ACE_Mission_Control.Views.MissionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ACE_Mission_Control.Views"
    xmlns:helper="using:ACE_Mission_Control.Helpers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:ace="using:ACE_Mission_Control.Core.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <StackPanel
        x:Name="ContentArea"
        Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
        <StackPanel.Resources>
            <helper:StringFormatConverter x:Key="StringFormatConverter" />
            <helper:AlertToString x:Key="AlertToString" />

        </StackPanel.Resources>
        <Grid
            x:Name="OBCControlsArea"
            Margin="8,8,8,0">

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Border Grid.ColumnSpan="1" Grid.RowSpan="4" Background="{ThemeResource SystemControlPageBackgroundChromeMediumLowBrush}"
                    BorderBrush="ForestGreen" BorderThickness="3,0,0,0"/>
            <TextBlock x:Uid="Mission_OBCHeader"
                       Grid.Row="0"
                       Grid.ColumnSpan="2"
                       Margin="10,4,0,8"
                       FontWeight="Bold"/>
            <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Left"
                Grid.Row="3"
                Grid.ColumnSpan="1"
                Margin="10,8,0,8">
                <Button x:Name="LockButton"
                    x:Uid="Mission_LockButton"
                    Style="{ThemeResource ACEIconButton}"
                    Command="{x:Bind ViewModel.LockButtonCommand}"
                    IsEnabled="{x:Bind ViewModel.LockButtonEnabled, Mode=OneWay}">
                    <SymbolIcon x:Name="LockButtonSymbol"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Symbol="{x:Bind ViewModel.LockButtonSymbol, Mode=OneWay}"/>
                </Button>
                <Button x:Name="RestartOBCButton"
                        x:Uid="Mission_RestartOBC"
                        Margin="8,0,0,0"
                        Style="{ThemeResource ACEButton}"
                        IsEnabled="{x:Bind ViewModel.OBCConnected, Mode=OneWay}"/>
                <AppBarSeparator/>
                <Button x:Name="TestPayloadButton"
                        x:Uid="Mission_TestPayload"
                        Style="{ThemeResource ACEButton}"
                        IsEnabled="{x:Bind ViewModel.OBCCanBeTested, Mode=OneWay}"/>
                <Button x:Name="TestInterfaceButton"
                        x:Uid="Mission_TestInterface"
                        Margin="8,0,0,0"
                        Style="{ThemeResource ACEButton}"
                        IsEnabled="{x:Bind ViewModel.OBCCanBeTested, Mode=OneWay}"/>
            </StackPanel>
        </Grid>
        <Grid
            x:Name="MissionControlsArea"
            Margin="8,8,8,0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Border Grid.ColumnSpan="1" Grid.RowSpan="5" Background="{ThemeResource SystemControlPageBackgroundChromeMediumLowBrush}"
                    BorderBrush="ForestGreen" BorderThickness="3,0,0,0"/>
            <TextBlock x:Uid="Mission_MissionControlHeader"
                       Grid.Row="0"
                       Grid.ColumnSpan="2"
                       Margin="10,4,0,8"
                       FontWeight="Bold"/>
            <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Left"
                Grid.Row="2"
                Grid.ColumnSpan="1"
                Margin="10,8,0,0">
                <Button x:Name="ConnectUGCSButton"
                        x:Uid="Mission_ConnectUGCSButton"
                        Style="{ThemeResource ACEButton}"/>
                <ComboBox Style="{ThemeResource ACEComboBox}"
                                IsEnabled="{x:Bind ViewModel.UGCSConnected, Mode=OneWay}"
                                Margin="8,5,0,0"/>
                <Button x:Name="RetrieveButton"
                        x:Uid="Mission_RetrieveButton"
                        Style="{ThemeResource ACEButton}"
                        IsEnabled="{x:Bind ViewModel.UGCSConnected, Mode=OneWay}"
                        Margin="8,0,0,0"/>
                <AppBarSeparator/>
                <Button x:Name="ImportFileButton"
                        x:Uid="Mission_ImportFileButton"
                        Style="{ThemeResource ACEButton}"/>
            </StackPanel>
            <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Left"
                Grid.Row="3"
                Margin="10,8,0,8">
                <StackPanel
                    Orientation="Vertical">
                    <TextBlock
                        x:Uid="Mission_SetPayload"
                        Margin="0,0,0,4"/>
                    <ComboBox
                        MinWidth="150"
                        Style="{ThemeResource ACEComboBox}"
                        IsEnabled="{x:Bind ViewModel.MissionCanBeModified}"
                        ItemsSource="{x:Bind ViewModel.AvailablePayloads, Mode=OneWay}"
                        SelectedIndex="{x:Bind ViewModel.SelectedPayload, Mode=OneWay}"/>
                </StackPanel>
                <StackPanel
                    Orientation="Vertical">
                    <TextBlock
                        x:Uid="Mission_SetDuration"
                        Margin="16,0,0,4"/>
                    <TextBox
                        IsSpellCheckEnabled="False"
                        MaxWidth="100"
                        Margin="16,0,0,0"
                        IsEnabled="{x:Bind ViewModel.MissionCanBeModified, Mode=OneWay}"
                        Text="{x:Bind ViewModel.TreatmentDuration, Mode=OneWay}"/>
                </StackPanel>
                <StackPanel
                    Orientation="Vertical">
                    <TextBlock
                        x:Uid="Mission_SetFlyThrough"
                        Margin="16,0,0,4"/>
                    <CheckBox
                        x:Uid="Mission_FlyThroughCheckbox"
                        Margin="16,0,0,0"
                        IsEnabled="{x:Bind ViewModel.MissionCanBeModified, Mode=OneWay}"
                        IsChecked="{x:Bind ViewModel.FlyThroughMode, Mode=OneWay}"/>
                </StackPanel>
            </StackPanel>
            <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Left"
                Grid.Row="4"
                Margin="10,8,0,8">
                <Button x:Name="UploadButton"
                        x:Uid="Mission_UploadButton"
                        Style="{ThemeResource ACEButton}"
                        IsEnabled="{x:Bind ViewModel.MissionCanBeModified, Mode=OneWay}"/>
                <Button x:Name="ActivateButton"
                        x:Uid="Mission_ActivateButton"
                        Margin="8,0,0,0"
                        Style="{ThemeResource ACEButton}"
                        Content="{x:Bind ViewModel.MissionActivatedText, Mode=OneWay}"/>
                <AppBarSeparator/>
                <Button x:Name="ResetButton"
                        x:Uid="Mission_ResetButton"
                        Style="{ThemeResource ACEButton}"
                        IsEnabled="{x:Bind ViewModel.MissionCanBeReset, Mode=OneWay}"/>
            </StackPanel>
        </Grid>
        
        <controls:DataGrid ItemsSource="{x:Bind ViewModel.Alerts, Mode=OneWay}" AutoGenerateColumns="True" IsReadOnly="True">
            <controls:DataGrid.Columns>
                <controls:DataGridTemplateColumn Header="Time" >
                    <controls:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate x:DataType="ace:AlertEntry">
                            <TextBlock Text="{x:Bind Timestamp, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{H:mm:ss}'}"/>
                        </DataTemplate>
                    </controls:DataGridTemplateColumn.CellTemplate>
                </controls:DataGridTemplateColumn>
                
                <controls:DataGridTemplateColumn Header="Text" >
                    <controls:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate x:DataType="ace:AlertEntry">
                            <TextBlock Text="{x:Bind Mode=OneWay, Converter={StaticResource AlertToString}}"/>
                        </DataTemplate>
                    </controls:DataGridTemplateColumn.CellTemplate>
                </controls:DataGridTemplateColumn>
            </controls:DataGrid.Columns>
        </controls:DataGrid>
        

        <ContentDialog x:Name="PassphraseDialog"
                       x:Uid="Mission_PassDialog"
                       PrimaryButtonText="Enter"
                       SecondaryButtonText="Cancel"
                       PrimaryButtonCommand="{x:Bind ViewModel.PassDialogEnterCommand}"
                       Closing="PassphraseDialog_Closing">
            <StackPanel>
                <TextBlock x:Uid="Mission_PassDialogText" />
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <PasswordBox x:Name="PassphraseDialogInput"
                                 Password="{x:Bind ViewModel.PassDialogInputText, Mode=TwoWay}"
                                 helper:EnterKeyHelpers.EnterKeyCommand="{x:Bind ViewModel.PassDialogEnterCommand}" />
                    <ProgressRing Margin="8,0,0,12"
                                  IsActive="{x:Bind ViewModel.PassDialogLoading, Mode=OneWay}" />
                </StackPanel>
                <TextBlock Text="{x:Bind ViewModel.PassDialogErrorText, Mode=OneWay}"
                           Foreground="{ThemeResource SystemErrorTextColor}"/>
            </StackPanel>
        </ContentDialog>
    </StackPanel>
</local:DroneBasePage>
